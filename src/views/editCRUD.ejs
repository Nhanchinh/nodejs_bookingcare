<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container">
        <div class="row">

            <form action="/change-crud" method="post">

                <div class="form-row">
                    <div class="col-12 mt-3"> edit user</div>
                    <div class="form-group col-md-6">
                        <label>Email</label>
                        <input type="email" value="<%=data.email%>" class="form-control" name="email"
                            placeholder="Email">
                    </div>
                    <div class="form-group col-md-6">
                        <label>Address</label>
                        <input type="text" value="<%=data.address%>" class="form-control" name="address"
                            id="inputAddress" placeholder="1234 street">
                    </div>
                </div>
                <div class="form-row">

                    <div class="form-group col-md-6">
                        <label>First Name</label>
                        <input type="text" value="<%=data.firstName%>" class="form-control" name="firstName"
                            id="inputEmail4" placeholder="First Name">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputPassword4">Last Name</label>
                        <input type="text" class="form-control" value="<%=data.lastName%>" name="lastName"
                            id="inputPassword4" placeholder="Last Name">
                    </div>
                </div>

                <input type="text" name="id" value="<%=data.id%>" hidden>



                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</body>

</html>